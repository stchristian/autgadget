<div class="mt-3">
    <h2>Felhasználók</h2>
    <form action="/user/list">
        <div class="form-row align-items-center mb-2">
            <div class="col-auto">
                <input type="search" class="form-control" name="kereses" value="<%= typeof kereses !== 'undefined' ? kereses : '' %>">
            </div>
            <div class="col-auto">
                <input class="btn btn-secondary" type="submit" value="Keresés">
            </div>    
        </div>
    </form>
    <div class="table-responsive">
    <table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
        <th scope="col">Vezetéknév</th>
        <th scope="col">Keresztnév</th>
        <th scope="col">E-mail cím</th>
        <th scope="col">Telefonszám</th>
        <th scope="col">Admin</th>
        <th scope="col">Eszközfelelős</th>
        <th scope="col">Műveletek</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
            <td><%= user.vezeteknev %></td>
            <td><%= user.keresztnev %></td>
            <td><%= user.email %></td>
            <td><%= user.telefonszam %></td>
            <td><i class="fas fa-<%= user.admin ? 'check' : 'times' %>"></i></td>
            <td><i class="fas fa-<%= user.eszkozfelelos ? 'check' : 'times' %>"></i></td>
            <td><a class="mx-2" href="/user/list/<%= user.id %>/edit"><i class="fas fa-edit"></i></a>
                <a class="mx-2" href="/user/<%= user.id %>/delete"><i class="fas fa-trash"></i></a>
            </td>
            </tr>
        <% }) %>
    </tbody>
    </table>
    <span>Összesen <%= totalCount %> találat.</span>
    <nav>
        <ul class="pagination">
            <% for( let i = 1; i <= totalPages; i++ ) { %>
                <li class="page-item"><a class="page-link" href="/user/list?pageNo=<%= i %>"><%= i %></a></li>
            <% } %>
        </ul>
    </nav>
    </div>
</div>

<% if(typeof user !== 'undefined') { %>
    <%- include user_edit %>
<% }; %>

