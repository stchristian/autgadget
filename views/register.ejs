<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Regisztráció
        </h1>
        <% if(typeof successMessage != 'undefined') { %>
          <div class="alert alert-success">
            <strong><%= successMessage%></strong>
          </div>
        <% }%>
        <%- include ./partials/messages %>
        <form action="/register" method="POST">
          <div class="form-group">
            <label for="vezeteknev">*Vezetéknév</label>
            <input
              type="name"
              id="vezeteknev"
              name="vezeteknev"
              class="form-control"
              placeholder="Kovács"
              value="<%= typeof vezeteknev != 'undefined' ? vezeteknev : '' %>"
            />
          </div>
          <div class="form-group">
          <label for="keresztnev">*Keresztnév</label>
          <input
            type="name"
            id="keresztnev"
            name="keresztnev"
            class="form-control"
            placeholder="János"
            value="<%= typeof keresztnev != 'undefined' ? keresztnev : '' %>"
          />
          </div>
          <div class="form-group">
            <label for="email">*Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="kovacs.janos@aut.bme.hu"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="jelszo">*Jelszó</label>
            <input
              type="password"
              id="jelszo"
              name="jelszo"
              class="form-control"
              placeholder="Jelszó"
            />
          </div>
          <div class="form-group">
            <label for="jelszo2">*Jelszó megerősítése</label>
            <input
              type="password"
              id="jelszo2"
              name="jelszo2"
              class="form-control"
              placeholder="Jelszó"
            />
          </div>
          <div class="form-group">
          <label for="telefonszam">*Telefonszám</label>
          <input
            type="tel"
            id="telefonszam"
            name="telefonszam"
            class="form-control"
            placeholder="Formátum: +36 (40) 123-4567"
            value="<%= typeof telefonszam != 'undefined' ? telefonszam : '' %>"
          />
        </div>
          <button type="submit" class="btn btn-primary btn-block">
            Regisztrálok
          </button>
          <span>(A *-gal jelölt mezők kitöltése kötelező)</span>
        </form>
        <p class="lead mt-4">Már regisztrált? <a href="/login">Bejelentkezés</a></p>
      </div>
    </div>
  </div>