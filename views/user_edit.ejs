<h3>Felhasználó adatainak szerkesztése</h3>
<%- include ./partials/messages %>
<form action="/user/list/<%= user.id %>/edit" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="vezeteknev">Vezetéknév</label>
            <input
            type="name"
            id="vezeteknev"
            name="vezeteknev"
            class="form-control"
            value="<%= user.vezeteknev %>"
            />
        </div>
        <div class="form-group col-md-6">
            <label for="keresztnev">Keresztnév</label>
            <input
                type="name"
                id="keresztnev"
                name="keresztnev"
                class="form-control"
                value="<%= user.keresztnev %>"
            />
        </div>
    </div>
    
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        value="<%= user.email %>"
      />
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="jelszo">Jelszó</label>
            <input
                type="password"
                id="jelszo"
                name="jelszo"
                class="form-control"
                placeholder="Jelszó"
            />
            </div>
        <div class="form-group col-md-6">
            <label for="jelszo2">Jelszó megerősítése</label>
            <input
                type="password"
                id="jelszo2"
                name="jelszo2"
                class="form-control"
                placeholder="Jelszó"
            />
        </div>
    </div>
    
    
    <div class="form-group">
    <label for="telefonszam">Telefonszám</label>
    <input
      type="tel"
      id="telefonszam"
      name="telefonszam"
      class="form-control"
      value="<%= user.telefonszam %>"
    />
     </div>
     <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="eszkozfelelos" name="eszkozfelelos" value="true" <%= user.eszkozfelelos ? 'checked' : '' %>>
            <label class="form-check-label" for="eszkozfelelos">
                Eszközfelelős
            </label>

        </div>
     </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="admin" name="admin" value="true" <%= user.admin ? 'checked' : '' %>>
            <label class="form-check-label" for="admin">
                Admin
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block">
        Mentés
    </button>
</form>